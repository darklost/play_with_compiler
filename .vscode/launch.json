{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
     
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}",
            "modulePaths": ["${workspaceFolder}/playscript-java/lib"]
        },
        {
            "type": "java",
            "name": "Launch PlayScript",
            "request": "launch",
            "mainClass": "play.PlayScript",
            "cwd": "${workspaceFolder}/playscript-java/out",
            "modulePaths": ["${workspaceFolder}/playscript-java/lib"],
            "args": "${input:PlayParams}"
        },
        {
            "type": "lua",
            "request": "launch",
            "name": "Debug",
            "program": "${file}",
            "path": "${workspaceFolder}/craft/lexer/?.lua;${workspaceFolder}/craft/?.lua;",
            "stopOnEntry": false,
        }
    ],
    "inputs": [
        {
            "id": "PlayParams",
            "type": "promptString",
            "description": "脚本参数",
            "default": " "
        }
    ]
}